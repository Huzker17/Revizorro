@model Revizorro.Models.Places
    <head>
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <div class="card">
        <img class="card-img-top" src="@Model.MainPhoto" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@Model.Description</p>
            @if (@Model.Photos != null)
            {
                @foreach (var item in Model.Photos)
                {
                    <img class="card-img-bottom" src="@Model.MainPhoto" alt="Card image cap">
                }
            }
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-success" onclick="OpenModal('@Model.Id')">Добавить новое фото</button>
            </div>
            <div class="d-flex justify-content-center">
                <button type="button" class="btn btn-success" onclick="OpenComment('@Model.Id')">Добавить отзыв</button>
            </div>
        </div>
        @if (Model.FeedBacks != null)
        {
            <table>
                <tbody>
                    @foreach (var item in Model.FeedBacks)
                    {
                        <tr>
                            <td>@item.Authour</td>
                        </tr>

                        <tr>
                            <td>@item.Description</td>
                        </tr>

                        <tr>
                            <td>@item.PublishedTime</td>
                        </tr>

                        <tr>
                            <td>@item.Rate</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
